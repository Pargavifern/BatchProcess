            <property name="principal" type="string"/>
            
            <property name="interest" type="string"/>
            
            <property name="fee" type="string"/>
            
            <property name="principalBalance" type="string"/>
            
            <property name="interestBalance" type="string"/>
            
            <property name="feeBalance" type="string"/>
            
            <property name="totalBalance" type="string"/>
            
            <property name="transactionDate" type="DateTime"/>
            
            <property name="lastPaymentDate" type="DateTime"/>
            
            <property name="todayDate" type="DateTime"/>
            
            <property name="InterestFrequency" type="string"/>
            
            <property name="PaymentFrequency" type="string"/>
            
            <property name="dayCount" type="string"/>
            
            <property name="rate" type="string"/>
            
