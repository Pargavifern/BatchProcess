<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Sort_Code_must_be_6_digit</fullName>
    <active>true</active>
    <errorConditionFormula>!ISBLANK(Sort_Code__c) &amp;&amp; ( LEN(Sort_Code__c) &lt; 6 || !ISNUMBER(Sort_Code__c))</errorConditionFormula>
    <errorDisplayField>Sort_Code__c</errorDisplayField>
    <errorMessage>Please enter a 6 digit numeric value</errorMessage>
</ValidationRule>
