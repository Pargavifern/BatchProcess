<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_number_must_be_8_digits</fullName>
    <active>true</active>
    <errorConditionFormula>!ISBLANK(Account_Number__c)&amp;&amp; (LEN( Account_Number__c ) &lt; 8 ||!ISNUMBER( Account_Number__c ))</errorConditionFormula>
    <errorDisplayField>Account_Number__c</errorDisplayField>
    <errorMessage>Please enter a 8 digit numeric value</errorMessage>
</ValidationRule>
