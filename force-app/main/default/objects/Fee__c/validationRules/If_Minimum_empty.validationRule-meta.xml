<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_Minimum_empty</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
RecordType.Name == &apos;Variable&apos;,
NOT(ISBLANK(Default_Amount__c)),
ISBLANK(Minimum__c)
)</errorConditionFormula>
    <errorDisplayField>Minimum__c</errorDisplayField>
    <errorMessage>Please enter minimum value</errorMessage>
</ValidationRule>
