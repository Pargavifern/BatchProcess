<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>New_Loan_must_be_Live</fullName>
    <active>true</active>
    <errorConditionFormula>AND (ISNEW(), NOT( ISPICKVAL( Status__c , &quot;Pending&quot;)))</errorConditionFormula>
    <errorMessage>New loans must have their status set to &apos;Pending&apos;</errorMessage>
</ValidationRule>
