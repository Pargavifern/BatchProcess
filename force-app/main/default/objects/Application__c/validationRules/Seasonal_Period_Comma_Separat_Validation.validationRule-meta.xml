<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Seasonal_Period_Comma_Separat_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(Seasonal_Periods__c )),
NOT(REGEX(Seasonal_Periods__c ,&quot;^[0-9,*]+$&quot;))
)</errorConditionFormula>
    <errorDisplayField>Seasonal_Periods__c</errorDisplayField>
    <errorMessage>Seasonal Periods Without Payments must be whole numbers separated by a comma e.g. 2,4,5</errorMessage>
</ValidationRule>
