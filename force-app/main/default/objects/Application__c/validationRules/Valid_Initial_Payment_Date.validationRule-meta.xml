<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_Initial_Payment_Date</fullName>
    <active>true</active>
    <errorConditionFormula>IF(ISNULL(Initial_Payment_Date__c),false,IF(ISNULL( Disbursal_Date__c),Initial_Payment_Date__c&lt;=TODAY(),
 Initial_Payment_Date__c&lt;=Disbursal_Date__c))</errorConditionFormula>
    <errorDisplayField>Initial_Payment_Date__c</errorDisplayField>
    <errorMessage>Initial Date must be in future or greater than Disbursal Date</errorMessage>
</ValidationRule>
