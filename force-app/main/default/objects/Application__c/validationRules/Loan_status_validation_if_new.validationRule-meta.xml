<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Loan_status_validation_if_new</fullName>
    <active>false</active>
    <errorConditionFormula>IF (ISPICKVAL(PRIORVALUE(Status__c),&quot;New&quot;)
,(ISPICKVAL(Status__c , &quot;Under Review&quot;)|| ISPICKVAL(Status__c , &quot;Complete&quot;)),False)</errorConditionFormula>
    <errorMessage>Status can only be changed to &apos;Submitted&apos; from the current status</errorMessage>
</ValidationRule>
